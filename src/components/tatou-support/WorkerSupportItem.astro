---
import InputNumberActions from "../InputNumberActions.astro";

export interface Props {
    id: string;
    target: string;
}

const { id, target } = Astro.props;
---

<div className="flex items-center gap-4 mt-4">
    <div className="flex-none text-primary">
        <i className="fa fa-hands-helping"></i>
    </div>
    <div className="grow">
        <h6 className="font-medium">Plumbers</h6>
        <p className="text-error text-xs">
            Still need <span className="font-medium">1 person</span>
        </p>
    </div>
    <button
        className={`flex-none block ${target} text-primary text-sm`}
        data-target={`.${target}`}
        onclick="showContent(this)"
    >
        <i className="fas fa-plus mr-2"></i>Support
    </button>
    <div className={`${target} hidden`}>
        <div className="flex gap-4">
            <button
                onclick="showContent(this)"
                data-target={`.${target}`}
                className="text-error"><i className="fas fa-trash-alt"></i></button
            >
            <InputNumberActions id={id} />
        </div>
    </div>
</div>
